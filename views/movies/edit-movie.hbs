<h2>Edit Movie</h2>

<form action="/movies/{{details._id}}/edit" method="post">
    <label for="title">Title</label>
    <input type="text" name="title" value="{{details.title}}">
    <br>
    <label for="genre">Genre</label>
    <input type="text" name="genre" value="{{details.genre}}">
    <br>
    <label for="plot">Plot</label>
    <input type="text" name="plot" value="{{details.plot}}">
    <br>
    <label for="cast">Cast</label>
    <select name="cast" multiple="true">
        {{#each details.cast}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>
    <br>
    <button>Update</button>
    <br>
</form>